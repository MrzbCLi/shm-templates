<!-- Scripts -->
<script>
    // Copy text to clipboard
    function copyToClipboard(text) {
        navigator.clipboard.writeText(text)
            .then(() => alert('–°—Å—ã–ª–∫–∞ —É—Å–ø–µ—à–Ω–æ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞!'))
            .catch(err => alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–∏ —Å—Å—ã–ª–∫–∏: ' + err));
    }
	
    function detectDevice() {
        const userAgent = navigator.userAgent.toLowerCase();
        const deviceInfo = document.getElementById('device-info');
        const installMessage = document.getElementById('install-message');
        const autoConnectLink = document.getElementById('auto-connect-link');
		const downloadLink = document.getElementById('download-link');
        const deviceButtons = document.getElementById('device-buttons');

        let autoConnectEnabled = false;

        if (userAgent.includes('iphone') || userAgent.includes('ipad')) {
            deviceInfo.textContent = '–í—ã –∏—Å–ø–æ–ª—å–∑—É–µ—Ç–µ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–æ Apple (iPhone/iPad).';
            autoConnectLink.href = "hiddify://install-config/?url={{ key.subscription_url }}";
            autoConnectLink.textContent = "üåê –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –¥–ª—è iPhone";
            autoConnectLink.style.display = "block";
            autoConnectEnabled = true;
        } else if (userAgent.includes('android')) {
            deviceInfo.textContent = '–í—ã –∏—Å–ø–æ–ª—å–∑—É–µ—Ç–µ Android-—É—Å—Ç—Ä–æ–π—Å—Ç–≤–æ.';
            autoConnectLink.href = "hiddify://install-config/?url={{ key.subscription_url }}";
            autoConnectLink.textContent = "üåê –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –¥–ª—è Android";
            autoConnectLink.style.display = "block";
            autoConnectEnabled = true;
        } else {
            deviceInfo.textContent = '–í—ã –∏—Å–ø–æ–ª—å–∑—É–µ—Ç–µ –ü–ö.';
            autoConnectLink.href = "hiddify://install-config/?url={{ key.subscription_url }}";
            autoConnectLink.textContent = "üåê –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –¥–ª—è –ü–ö";
            autoConnectLink.style.display = "block";
            autoConnectEnabled = true;
        }

        deviceButtons.style.display = 'block';

        // Show install message if auto-connect is available
        if (autoConnectEnabled) {
            installMessage.style.display = 'block';
        }
    }

    window.onload = detectDevice;
</script>

